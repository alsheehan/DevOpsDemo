@using System.Configuration

@{
    //ViewBag.Title = "Deployed via Git Hub - with online changes";
    ViewBag.Title = ConfigurationManager.AppSettings["AppName"];

}

<h2>@ViewBag.Title</h2>
<form class="form-horizontal">
    <fieldset class="col-sm-6">
        <legend>Information</legend>
        <div class="form-group">
            <label for="fullname" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
                <input type="text" id="fullname" name="fullname" class="form-control"  />
                <span class="help-block">Here is some text to help you</span>
            </div>
        </div>

        <div class="form-group">
            <label for="comments" class="col-sm-2 control-label">Comments</label>
            <div class="col-sm-10 control-label">
                <textarea name="comments" id="comments" class="form-control" rows="5" cols="40"></textarea>
            </div>
        </div>

        <div class="form-group">
            <label for="luckynumber" class="col-sm-2 control-label">Lucky Number</label>
            <div class="col-sm-10">
                <select name="luckynumber" id="luckynumber" class="form-control">
                    <option>double</option>
                    <option>seven</option>
                    <option>thirteen</option>
                </select>
            </div>
        </div>
    </fieldset>

    <fieldset class="col-sm-6" >
        <legend>Survey</legend>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10 ">
                <div class="checkbox">
                    <label><input type="checkbox" name="pet" id="pet" value="dog" />Own a Dog</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" name="pet" id="pet" value="cat" />Own a Cat</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" name="pet" id="pet" value="owned" />Own by a Cat</label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10 ">
                <span><b>Your Favourite Weather</b></span><br />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10 ">
                <div class="radio">
                    <label><input type="radio" id="count" name="count" value="hot" /> hot</label>
                </div>
                <div class="radio">
                    <label><input type="radio" id="count" name="count" value="cold" /> cold</label>
                </div>
                <div class="radio">
                    <label><input type="radio" id="count" name="count" value="rainy" /> rainy</label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-primary" value="Submit" />
            </div>
        </div>
    </fieldset>

</form>

